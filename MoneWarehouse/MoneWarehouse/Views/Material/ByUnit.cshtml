@{
    ViewData["Title"] = "Birime Göre Malzemeler";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Birime Göre Malzeme Filtrele</h4>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-3">
                <i class="fas fa-arrow-left me-1"></i> Listeye Dön
            </a>
        </div>
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card border-light">
                        <div class="card-body">
                            <form asp-action="ByUnit" method="post">
                                <div class="text-center mb-4">
                                    <i class="fas fa-filter fa-3x text-primary mb-3"></i>
                                    <h5>Birim Seçin</h5>
                                </div>

                                <div class="form-floating mb-4">
                                    <select name="unit" id="unit" class="form-select form-select-lg" required>
                                        <option value="">Birim Seçiniz</option>
                                        @foreach (var unit in ViewBag.Units)
                                        {
                                            <option value="@unit">@unit</option>
                                        }
                                    </select>
                                    <label for="unit">Birim</label>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-filter me-1"></i> Filtrele
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-focus select alanına
            $('#unit').focus();

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
@model EntityLayer.Entities.Size

@{
    ViewData["Title"] = "Boyut Kodları";
}

<div class="container-fluid">
    <h2>@Model.SizeName - İlişkili Kodlar</h2>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Boyut Listesine Dön</a>
        <a asp-action="Details" asp-route-id="@Model.SizeId" class="btn btn-info">Boyut Detayları</a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5>Boyut Bilgileri</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.SizeId</dd>

                        <dt class="col-sm-4">Boyut Adı:</dt>
                        <dd class="col-sm-8">@Model.SizeName</dd>

                        <dt class="col-sm-4">Boyut Tipi:</dt>
                        <dd class="col-sm-8">@Model.SizeType</dd>

                        <dt class="col-sm-4">Açıklama:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</dd>

                        <dt class="col-sm-4">Durum:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                                @(Model.IsActive ? "Aktif" : "Pasif")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Oluşturulma:</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Güncelleme:</dt>
                        <dd class="col-sm-8">@(Model.UpdatedDate.HasValue ? Model.UpdatedDate.Value.ToString("dd/MM/yyyy") : "-")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>İlişkili Kodlar</h5>
                </div>
                <div class="card-body">
                    @if (Model.Codes != null && Model.Codes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Kod ID</th>
                                        <th>Kod</th>
                                        <th>Kod Adı</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var code in Model.Codes)
                                    {
                                        <tr>
                                            <td>@code.CodeId</td>
                                            <td>@code.Code</td>
                                            <td>@code.CodeName</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="@Url.Action("Details", "Code", new { id = code.CodeId })" class="btn btn-sm btn-info">Detay</a>
                                                    <a href="@Url.Action("Edit", "Code", new { id = code.CodeId })" class="btn btn-sm btn-primary">Düzenle</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            Bu boyuta bağlı kod bulunamadı.
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Create", "Code", new { sizeId = Model.SizeId })" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Yeni Kod Ekle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@model EntityLayer.Entities.Size

@{
    ViewData["Title"] = "Boyut Düzenle";
}

<div class="container-fluid">
    <h2>Boyut Düzenle</h2>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Boyut Listesine Dön</a>
        <a asp-action="Details" asp-route-id="@Model.SizeId" class="btn btn-info">Detaylar</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Boyut Bilgileri</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SizeId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="SizeName" class="form-label">Boyut Adı:</label>
                            <input asp-for="SizeName" class="form-control" required />
                            <span asp-validation-for="SizeName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="SizeType" class="form-label">Boyut Tipi:</label>
                            <input asp-for="SizeType" class="form-control" required />
                            <span asp-validation-for="SizeType" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Açıklama:</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive">
                        Aktif
                    </label>
                </div>

                <button type="submit" class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
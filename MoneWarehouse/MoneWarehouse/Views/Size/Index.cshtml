@model IEnumerable<EntityLayer.Entities.Size>

@{
    ViewData["Title"] = "Boyutlar";
}

<div class="container-fluid">
    <h2>Boyutlar</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Yeni Boyut Ekle</a>
        <a asp-action="Active" class="btn btn-success">Aktif Boyutlar</a>
        <a asp-action="ByType" class="btn btn-info">Tipe Göre Filtrele</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5>Tüm Boyutlar</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Boyut Adı</th>
                            <th>Boyut Tipi</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Güncellenme Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SizeId</td>
                                <td>@item.SizeName</td>
                                <td>@item.SizeType</td>
                                <td>@(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)</td>
                                <td>
                                    <span class="badge bg-@(item.IsActive ? "success" : "danger")">
                                        @(item.IsActive ? "Aktif" : "Pasif")
                                    </span>
                                </td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>@(item.UpdatedDate.HasValue ? item.UpdatedDate.Value.ToString("dd/MM/yyyy") : "-")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.SizeId" class="btn btn-sm btn-info">Detay</a>
                                        <a asp-action="Edit" asp-route-id="@item.SizeId" class="btn btn-sm btn-primary">Düzenle</a>
                                        <a asp-action="WithCodes" asp-route-id="@item.SizeId" class="btn btn-sm btn-secondary">Kodlar</a>
                                        <a asp-action="Delete" asp-route-id="@item.SizeId" class="btn btn-sm btn-danger">Sil</a>
                                        @if (item.IsActive)
                                        {
                                            <form asp-action="Deactivate" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.SizeId" />
                                                <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Bu boyutu deaktif etmek istediğinizden emin misiniz?')">Deaktif Et</button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
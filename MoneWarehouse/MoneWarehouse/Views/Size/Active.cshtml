@model IEnumerable<EntityLayer.Entities.Size>

@{
    ViewData["Title"] = "Aktif Boyutlar";
}

<div class="container-fluid">
    <h2>Aktif Boyutlar</h2>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Tüm Boyutlar</a>
        <a asp-action="Create" class="btn btn-primary">Yeni Boyut Ekle</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5>Aktif Boyutlar Listesi</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Boyut Adı</th>
                                <th>Boyut Tipi</th>
                                <th>Açıklama</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SizeId</td>
                                    <td>@item.SizeName</td>
                                    <td>@item.SizeType</td>
                                    <td>@(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)</td>
                                    <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.SizeId" class="btn btn-sm btn-info">Detay</a>
                                            <a asp-action="Edit" asp-route-id="@item.SizeId" class="btn btn-sm btn-primary">Düzenle</a>
                                            <a asp-action="WithCodes" asp-route-id="@item.SizeId" class="btn btn-sm btn-secondary">Kodlar</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Aktif boyut bulunamadı.
                </div>
            }
        </div>
    </div>
</div>
@model EntityLayer.Entities.Sales

@{
    ViewData["Title"] = "Satış Düzenle";
}

<div class="container-fluid">
    <h2>Satış Düzenle</h2>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Satış Listesine Dön</a>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Detaylar</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Satış Bilgileri</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ClientId" class="form-label">Müşteri:</label>
                            <select asp-for="ClientId" asp-items="ViewBag.Clients" class="form-select" required>
                                <option value="">-- Müşteri Seçin --</option>
                            </select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="EmployeeId" class="form-label">Satış Temsilcisi:</label>
                            <select asp-for="EmployeeId" asp-items="ViewBag.Employees" class="form-select" required>
                                <option value="">-- Çalışan Seçin --</option>
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="SalesDate" class="form-label">Satış Tarihi:</label>
                            <input asp-for="SalesDate" type="date" class="form-control" required />
                            <span asp-validation-for="SalesDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label">Durum:</label>
                            <select asp-for="Status" class="form-select" required>
                                <option value="Completed">Tamamlandı</option>
                                <option value="Processing">İşlemde</option>
                                <option value="Cancelled">İptal Edildi</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notes" class="form-label">Notlar:</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="card mt-4 mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>Satış Detayları</h5>
                        <a asp-action="AddDetail" asp-route-id="@Model.Id" class="btn btn-sm btn-success">Yeni Ürün Ekle</a>
                    </div>
                    <div class="card-body">
                        @if (Model.SalesDetails != null && Model.SalesDetails.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-striped">
                                    <thead>
                                        <tr>
                                            <th>Ürün Tipi</th>
                                            <th>Ürün</th>
                                            <th>Miktar</th>
                                            <th>Birim Fiyat</th>
                                            <th>Toplam</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model.SalesDetails)
                                        {
                                            <tr>
                                                <td>@detail.ProductType</td>
                                                <td>
                                                    @if (detail.ProductType == "Plıntus" && detail.PlıntusStock != null)
                                                    {
                                                        @detail.PlıntusStock.Name
                                                    }
                                                    else if (detail.ProductType == "Injection" && detail.InjectionStock != null)
                                                    {
                                                        @detail.InjectionStock.Name
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td>@detail.Quantity</td>
                                                <td>@detail.UnitPrice.ToString("N2") ₺</td>
                                                <td>@detail.TotalPrice.ToString("N2") ₺</td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a asp-action="EditDetail" asp-route-id="@detail.Id" class="btn btn-sm btn-primary">Düzenle</a>
                                                        <a asp-action="DeleteDetail" asp-route-id="@detail.Id" class="btn btn-sm btn-danger">Sil</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="4" class="text-end">Toplam:</th>
                                            <th>@Model.TotalAmount.ToString("N2") ₺</th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                Bu satışa ait ürün detayı bulunamadı.
                            </div>
                        }
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
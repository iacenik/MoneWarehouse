@model IEnumerable<EntityLayer.Entities.PlıntusDaily>

@{
    ViewData["Title"] = "Plıntus Günlük Üretim Kayıtları";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Plıntus Günlük Üretim Kayıtları</h4>
            <div>
                <a asp-action="Create" class="btn btn-success btn-sm rounded-pill px-3">
                    <i class="fas fa-plus-circle me-1"></i> Yeni Kayıt Ekle
                </a>
                <a asp-action="ByDateRange" class="btn btn-info btn-sm rounded-pill px-3">
                    <i class="fas fa-calendar-alt me-1"></i> Tarih Aralığı
                </a>
                <a asp-action="TotalProduction" class="btn btn-warning btn-sm rounded-pill px-3">
                    <i class="fas fa-chart-bar me-1"></i> Toplam Üretim
                </a>
                <a asp-action="ProductionByEmployee" class="btn btn-primary btn-sm rounded-pill px-3">
                    <i class="fas fa-users me-1"></i> Çalışana Göre
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table id="plintusDailyDataTable" class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Tarih</th>
                            <th>Plıntus Stok</th>
                            <th>Çalışan</th>
                            <th>Miktar</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (item.PlıntusStock != null)
                                    {
                                        <span>@item.PlıntusStock.Name (@item.PlıntusStock.Code)</span>
                                    }
                                    else
                                    {
                                        <span>Stok ID: @item.PlıntusStockId</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Employee != null)
                                    {
                                        <span>@item.Employee.EmployeeName</span>
                                    }
                                    else
                                    {
                                        <span>Çalışan ID: @item.EmployeeId</span>
                                    }
                                </td>
                                <td class="text-end">@item.Quantity</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" data-toggle="tooltip" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" data-toggle="tooltip" title="Detaylar">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" data-toggle="tooltip" title="Sil">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <span>Toplam <strong>@Model.Count()</strong> üretim kaydı bulunmaktadır.</span>
            <span>Toplam Üretim: <strong>@Model.Sum(x => x.Quantity)</strong></span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#plintusDailyDataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                "order": [[1, "desc"]],
                "pageLength": 25
            });
            $('[data-toggle="tooltip"]').tooltip();
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
@model EntityLayer.Entities.PlıntusDaily

@{
    ViewData["Title"] = "Günlük Üretim Kaydı Sil";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Günlük Üretim Kaydı Silme Onayı</h4>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-3">
                <i class="fas fa-arrow-left me-1"></i> Listeye Dön
            </a>
        </div>
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> Bu günlük üretim kaydını silmek istediğinizden emin misiniz? Bu işlem geri alınamaz ve stok miktarlarını etkileyebilir.
            </div>

            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="card border-light mb-3">
                        <div class="card-header bg-light text-dark">
                            <h5 class="mb-0">Günlük Üretim Bilgileri</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Kayıt ID:</div>
                                <div class="col-md-8 font-weight-bold">@Model.Id</div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Tarih:</div>
                                <div class="col-md-8 font-weight-bold">@Model.Date.ToString("dd.MM.yyyy")</div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Plıntus Stok:</div>
                                <div class="col-md-8 font-weight-bold">
                                    @if (Model.PlıntusStock != null)
                                    {
                                        <span>@Model.PlıntusStock.Name (@Model.PlıntusStock.Code)</span>
                                    }
                                    else
                                    {
                                        <span>Stok ID: @Model.PlıntusStockId</span>
                                    }
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Çalışan:</div>
                                <div class="col-md-8 font-weight-bold">
                                    @if (Model.Employee != null)
                                    {
                                        <span>@Model.Employee.EmployeeName</span>
                                    }
                                    else
                                    {
                                        <span>Çalışan ID: @Model.EmployeeId</span>
                                    }
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Miktar:</div>
                                <div class="col-md-8 font-weight-bold">@Model.Quantity</div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="row mb-3">
                                    <div class="col-md-4 text-muted">Açıklama:</div>
                                    <div class="col-md-8">@Model.Description</div>
                                </div>
                            }
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4 text-center">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg px-5">
                            <i class="fas fa-trash-alt me-1"></i> Kaydı Sil
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 ms-2">
                            <i class="fas fa-times-circle me-1"></i> İptal
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
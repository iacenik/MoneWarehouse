@model EntityLayer.Entities.PlıntusDaily

@{
    ViewData["Title"] = "Günlük Üretim Detayları";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Günlük Üretim Detayları</h4>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm rounded-pill px-3">
                    <i class="fas fa-edit me-1"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm rounded-pill px-3">
                    <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card mb-4 border-left-primary">
                        <div class="card-header bg-light">
                            <h5 class="m-0 font-weight-bold">Üretim Bilgileri</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Kayıt ID:</div>
                                <div class="col-md-8 font-weight-bold">@Model.Id</div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Tarih:</div>
                                <div class="col-md-8 font-weight-bold">@Model.Date.ToString("dd.MM.yyyy")</div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Plıntus Stok:</div>
                                <div class="col-md-8 font-weight-bold">
                                    @if (Model.PlıntusStock != null)
                                    {
                                        <span>@Model.PlıntusStock.Name (@Model.PlıntusStock.Code)</span>
                                    }
                                    else
                                    {
                                        <span>Stok ID: @Model.PlıntusStockId</span>
                                    }
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Çalışan:</div>
                                <div class="col-md-8 font-weight-bold">
                                    @if (Model.Employee != null)
                                    {
                                        <span>@Model.Employee.EmployeeName</span>
                                    }
                                    else
                                    {
                                        <span>Çalışan ID: @Model.EmployeeId</span>
                                    }
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Miktar:</div>
                                <div class="col-md-8">
                                    <span class="h3 font-weight-bold text-primary">@Model.Quantity</span>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="row mb-3">
                                    <div class="col-md-4 text-muted">Açıklama:</div>
                                    <div class="col-md-8">@Model.Description</div>
                                </div>
                            }

                            <hr />

                            <div class="d-grid gap-2 mt-3">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i> Kaydı Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                    <i class="fas fa-trash-alt me-1"></i> Kaydı Sil
                                </a>
                                <a asp-action="ByEmployee" asp-route-employeeId="@Model.EmployeeId" class="btn btn-outline-info">
                                    <i class="fas fa-user me-1"></i> Çalışanın Tüm Kayıtları
                                </a>
                                <a asp-action="ByStock" asp-route-stockId="@Model.PlıntusStockId" class="btn btn-outline-secondary">
                                    <i class="fas fa-boxes me-1"></i> Stokun Tüm Kayıtları
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
@model IEnumerable<EntityLayer.Entities.PlıntusStock>

@{
    ViewData["Title"] = "Plıntus Stok Yönetimi";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Plıntus Stok Listesi</h4>
            <div>
                <a asp-action="Create" class="btn btn-success btn-sm rounded-pill px-3">
                    <i class="fas fa-plus-circle me-1"></i> Yeni Stok Ekle
                </a>
                <a asp-action="TotalStock" class="btn btn-info btn-sm rounded-pill px-3">
                    <i class="fas fa-clipboard-list me-1"></i> Toplam Stok Raporu
                </a>
                <a asp-action="LowStock" class="btn btn-warning btn-sm rounded-pill px-3">
                    <i class="fas fa-exclamation-triangle me-1"></i> Düşük Stoklar
                </a>
                <a asp-action="ByCode" class="btn btn-secondary btn-sm rounded-pill px-3">
                    <i class="fas fa-search me-1"></i> Kod ile Ara
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table id="plintusStockDataTable" class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Kod</th>
                            <th>İsim</th>
                            <th>Miktar</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td class="text-end">@item.Quantity</td>
                                <td>
                                    @if (item.Quantity <= 5)
                                    {
                                        <span class="badge bg-danger" data-toggle="tooltip" title="Acil sipariş gerekli!">Kritik Seviye</span>
                                    }
                                    else if (item.Quantity <= 20)
                                    {
                                        <span class="badge bg-warning text-dark" data-toggle="tooltip" title="Sipariş planlaması yapılmalı">Düşük Stok</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success" data-toggle="tooltip" title="Stok seviyesi yeterli">Yeterli</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" data-toggle="tooltip" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" data-toggle="tooltip" title="Detaylar">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" data-toggle="tooltip" title="Sil">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                        <a asp-action="ManageStock" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" data-toggle="tooltip" title="Stok Miktarını Ayarla">
                                            <i class="fas fa-balance-scale"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <span>Toplam <strong>@Model.Count()</strong> stok bulunmaktadır.</span>
            <span>Toplam Miktar: <strong>@Model.Sum(x => x.Quantity)</strong></span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#plintusStockDataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                "order": [[0, "asc"]],
                "pageLength": 25
            });
            $('[data-toggle="tooltip"]').tooltip();
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
@model EntityLayer.Entities.PlıntusStock

@{
    ViewData["Title"] = "Yeni Plıntus Stok Ekle";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Yeni Plıntus Stok Ekle</h4>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-3">
                <i class="fas fa-arrow-left me-1"></i> Listeye Dön
            </a>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Code" class="form-control" placeholder="Kod" required />
                            <label asp-for="Code">Kod</label>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="İsim" required />
                            <label asp-for="Name">İsim</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Quantity" class="form-control" placeholder="Miktar" type="number" min="0" value="0" required />
                            <label asp-for="Quantity">Miktar</label>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-save me-1"></i> Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 ms-2">
                                <i class="fas fa-times-circle me-1"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Form validation için Bootstrap validation kullanımı
            $('form').submit(function (event) {
                if (this.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                $(this).addClass('was-validated');
            });

            // Auto-focus ilk input alanına
            $('input:first').focus();
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
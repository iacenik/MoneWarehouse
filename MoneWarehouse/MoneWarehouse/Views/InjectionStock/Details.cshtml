@model EntityLayer.Entities.InjectionStock

@{
    ViewData["Title"] = "Enjeksiyon Stoğu Detayları";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h4 class="m-0 font-weight-bold text-primary">Stok Bilgileri</h4>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm rounded-pill px-3">
                            <i class="fas fa-edit me-1"></i> Düzenle
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="p-4">
                        <div class="mb-4 text-center">
                            <div class="display-4 font-weight-bold text-primary">@Model.Quantity</div>
                            <p class="text-muted">Mevcut Stok Miktarı</p>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Stok Kodu:</div>
                            <div class="col-md-8 font-weight-bold">@Model.Code</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Stok Adı:</div>
                            <div class="col-md-8 font-weight-bold">@Model.Name</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Durum:</div>
                            <div class="col-md-8">
                                @if (Model.Quantity <= 5)
                                {
                                    <span class="badge bg-danger">Kritik Seviye</span>
                                }
                                else if (Model.Quantity <= 20)
                                {
                                    <span class="badge bg-warning text-dark">Düşük Stok</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Yeterli</span>
                                }
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-grid gap-2">
                            <a asp-action="ManageStock" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                <i class="fas fa-balance-scale me-1"></i> Stok Miktarını Ayarla
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="fas fa-trash-alt me-1"></i> Stok Kaydını Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h4 class="m-0 font-weight-bold text-primary">Stok Hareketleri</h4>
                </div>
                <div class="card-body">
                    @if (Model.InjectionDailies != null && Model.InjectionDailies.Any())
                    {
                        <div class="table-responsive">
                            <table id="stockMovementsTable" class="table table-hover table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Miktar</th>
                                        <th>Çalışan</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entry in Model.InjectionDailies.OrderByDescending(e => e.Date))
                                    {
                                        <tr>
                                            <td>@entry.Date.ToShortDateString()</td>
                                            <td class="text-end">@entry.Quantity</td>
                                            <td>@entry.EmployeeId</td>
                                            <td>
                                                <a asp-controller="InjectionDaily" asp-action="Details" asp-route-id="@entry.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-clipboard-list fa-3x text-muted"></i>
                            </div>
                            <p class="text-muted">Bu stok için henüz üretim hareketi bulunmamaktadır.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#stockMovementsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                "order": [[0, "desc"]],
                "pageLength": 10
            });
            $('[data-toggle="tooltip"]').tooltip();
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
@model IEnumerable<EntityLayer.Entities.Codes>

@{
    ViewData["Title"] = "Kodlar";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Kod Listesi</h6>
            <div>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Yeni Kod
                </a>
                <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#sizeFilterModal">
                    <i class="fas fa-filter"></i> Boyuta Göre Filtrele
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="codesDataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Code)</th>
                            <th>@Html.DisplayNameFor(model => model.CodeName)</th>
                            <th>Boyut</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Code)</td>
                                <td>@Html.DisplayFor(modelItem => item.CodeName)</td>
                                <td>
                                    @if (item.SizeId.HasValue)
                                    {
                                        <a asp-action="BySize" asp-route-sizeId="@item.SizeId" class="badge badge-info">
                                            Boyut ID: @item.SizeId
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Boyut yok</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.CodeId" class="btn btn-info btn-sm" data-toggle="tooltip" title="Detaylar">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.CodeId" class="btn btn-primary btn-sm" data-toggle="tooltip" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.CodeId" class="btn btn-danger btn-sm" data-toggle="tooltip" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Size Filter Modal -->
<div class="modal fade" id="sizeFilterModal" tabindex="-1" role="dialog" aria-labelledby="sizeFilterModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="BySize" method="get">
                <div class="modal-header">
                    <h5 class="modal-title" id="sizeFilterModalLabel">Boyuta Göre Filtrele</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="sizeId">Boyut ID</label>
                        <input type="number" class="form-control" id="sizeId" name="sizeId" placeholder="Boyut ID'sini giriniz" min="1" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#codesDataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                "order": [[0, "asc"]],
                "pageLength": 25
            });

            $('[data-toggle="tooltip"]').tooltip();

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
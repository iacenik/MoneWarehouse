@model EntityLayer.Entities.Codes

@{
    ViewData["Title"] = "Kod Detayları";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Kod Detayları</h6>
            <div>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
                <a asp-action="Edit" asp-route-id="@Model.CodeId" class="btn btn-primary btn-sm">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">Kod Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.CodeId)</th>
                                    <td>@Html.DisplayFor(model => model.CodeId)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Code)</th>
                                    <td>@Html.DisplayFor(model => model.Code)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.CodeName)</th>
                                    <td>@Html.DisplayFor(model => model.CodeName)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.SizeId)</th>
                                    <td>
                                        @if (Model.SizeId.HasValue)
                                        {
                                            <a asp-action="BySize" asp-route-sizeId="@Model.SizeId" class="badge badge-info">
                                                Boyut ID: @Model.SizeId
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Boyut yok</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">İlişkili Ürünler</h6>
                        </div>
                        <div class="card-body">
                            <!-- Bu kısım normalde ilişkili ürünleri gösterecek şekilde düzenlenebilir,
                                 şu an için sadece bağlantı butonları ekliyoruz -->
                            <div class="d-flex flex-column gap-2">
                                <a href="#" class="btn btn-info btn-sm mb-2">
                                    <i class="fas fa-syringe"></i> İlişkili Enjeksiyonlar
                                </a>
                                <a href="#" class="btn btn-info btn-sm">
                                    <i class="fas fa-box"></i> İlişkili Plintuslar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.CodeId" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Delete" asp-route-id="@Model.CodeId" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Sil
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
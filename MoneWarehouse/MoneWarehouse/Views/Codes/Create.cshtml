@model EntityLayer.Entities.Codes

@{
    ViewData["Title"] = "Yeni Kod";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Yeni Kod Oluştur</h6>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
        <form asp-action="Create" method="post">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-primary">Kod Bilgileri</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Code" class="control-label"></label>
                                    <input asp-for="Code" class="form-control" placeholder="Kodu giriniz" required />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CodeName" class="control-label"></label>
                                    <input asp-for="CodeName" class="form-control" placeholder="Kod adını giriniz" required />
                                    <span asp-validation-for="CodeName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SizeId" class="control-label"></label>
                                    <input asp-for="SizeId" class="form-control" placeholder="Boyut ID'sini giriniz" />
                                    <span asp-validation-for="SizeId" class="text-danger"></span>
                                    <small class="form-text text-muted">Boyut ID'si boş bırakılabilir. Boyut ID'sini bilmiyorsanız, Boyutlar sayfasından kontrol edebilirsiniz.</small>
                                </div>
                                <div class="alert alert-info mt-3">
                                    <i class="fas fa-info-circle"></i>
                                    <span class="ml-2">Oluşturduğunuz kodlar, enjeksiyon ve plintus ürünlerinde kullanılabilir.</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
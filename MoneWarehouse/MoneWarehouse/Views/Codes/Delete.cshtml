@model EntityLayer.Entities.Codes

@{
    ViewData["Title"] = "Kod Sil";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Kod Silme Onayı</h6>
            <div>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
                <a asp-action="Details" asp-route-id="@Model.CodeId" class="btn btn-info btn-sm">
                    <i class="fas fa-info-circle"></i> Detaylar
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-triangle"></i> Uyarı!</h5>
                <p><strong>@Model.Code</strong> kodunu silmek üzeresiniz. Bu işlem geri alınamaz!</p>
                <p>Eğer bu kod ile ilişkili enjeksiyon veya plintus ürünleri varsa, silme işlemi başarısız olacaktır.</p>
            </div>

            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">Kod Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.CodeId)</th>
                                    <td>@Html.DisplayFor(model => model.CodeId)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Code)</th>
                                    <td>@Html.DisplayFor(model => model.Code)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.CodeName)</th>
                                    <td>@Html.DisplayFor(model => model.CodeName)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.SizeId)</th>
                                    <td>
                                        @if (Model.SizeId.HasValue)
                                        {
                                            <a asp-action="BySize" asp-route-sizeId="@Model.SizeId" class="badge badge-info">
                                                Boyut ID: @Model.SizeId
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Boyut yok</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CodeId" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
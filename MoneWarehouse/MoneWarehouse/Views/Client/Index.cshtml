@model IEnumerable<EntityLayer.Entities.Client>

@{
    ViewData["Title"] = "Müşteriler";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Müşteri Listesi</h6>
            <div>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Yeni Müşteri
                </a>
                <a asp-action="Active" class="btn btn-success btn-sm">
                    <i class="fas fa-check-circle"></i> Aktif Müşteriler
                </a>
                <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#countryFilterModal">
                    <i class="fas fa-filter"></i> Ülkeye Göre Filtrele
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="clientsDataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                            <th>@Html.DisplayNameFor(model => model.ContactName)</th>
                            <th>@Html.DisplayNameFor(model => model.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Country)</th>
                            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                                <td>@Html.DisplayFor(modelItem => item.ContactName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.ClientId" class="btn btn-info btn-sm" data-toggle="tooltip" title="Detaylar">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.ClientId" class="btn btn-primary btn-sm" data-toggle="tooltip" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Sales" asp-route-id="@item.ClientId" class="btn btn-success btn-sm" data-toggle="tooltip" title="Satışlar">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                        @if (item.IsActive)
                                        {
                                            <a asp-action="Deactivate" asp-route-id="@item.ClientId" class="btn btn-warning btn-sm" data-toggle="tooltip" title="Deaktif Et">
                                                <i class="fas fa-user-slash"></i>
                                            </a>
                                        }
                                        <a asp-action="Delete" asp-route-id="@item.ClientId" class="btn btn-danger btn-sm" data-toggle="tooltip" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Country Filter Modal -->
<div class="modal fade" id="countryFilterModal" tabindex="-1" role="dialog" aria-labelledby="countryFilterModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="ClientsByCountry" method="get">
                <div class="modal-header">
                    <h5 class="modal-title" id="countryFilterModalLabel">Ülkeye Göre Filtrele</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="country">Ülke</label>
                        <input type="text" class="form-control" id="country" name="country" placeholder="Ülke adı giriniz">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#clientsDataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                "order": [[0, "asc"]],
                "pageLength": 25
            });

            $('[data-toggle="tooltip"]').tooltip();

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
@model EntityLayer.Entities.Client

@{
    ViewData["Title"] = "Müşteri Düzenle";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Müşteri Düzenle</h6>
            <div>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
                <a asp-action="Details" asp-route-id="@Model.ClientId" class="btn btn-info btn-sm">
                    <i class="fas fa-info-circle"></i> Detaylar
                </a>
            </div>
        </div>
        <form asp-action="Edit" method="post">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="ClientId" />
                <input type="hidden" asp-for="CreatedDate" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-primary">Firma Bilgileri</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="CompanyName" class="control-label"></label>
                                    <input asp-for="CompanyName" class="form-control" required />
                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ContactName" class="control-label"></label>
                                    <input asp-for="ContactName" class="form-control" required />
                                    <span asp-validation-for="ContactName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ContactTitle" class="control-label"></label>
                                    <input asp-for="ContactTitle" class="form-control" />
                                    <span asp-validation-for="ContactTitle" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label"></label>
                                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Country" class="control-label"></label>
                                    <input asp-for="Country" class="form-control" />
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label"></label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" type="email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-primary">Finans & Teslimat Bilgileri</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="RegComNumber" class="control-label"></label>
                                    <input asp-for="RegComNumber" class="form-control" />
                                    <span asp-validation-for="RegComNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CIFNumber" class="control-label"></label>
                                    <input asp-for="CIFNumber" class="form-control" />
                                    <span asp-validation-for="CIFNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="BankName" class="control-label"></label>
                                    <input asp-for="BankName" class="form-control" />
                                    <span asp-validation-for="BankName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IBAN" class="control-label"></label>
                                    <input asp-for="IBAN" class="form-control" />
                                    <span asp-validation-for="IBAN" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DeliveryConditions" class="control-label"></label>
                                    <textarea asp-for="DeliveryConditions" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="DeliveryConditions" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <input asp-for="IsActive" class="form-check-input" />
                                    <label asp-for="IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
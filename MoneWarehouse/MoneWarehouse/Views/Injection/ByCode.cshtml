@model IEnumerable<EntityLayer.Entities.Injection>

@{
    ViewData["Title"] = "Koda Göre Enjeksiyonlar";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Kod ID: @ViewBag.CodeId - Enjeksiyon Ürünleri</h6>
            <div>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Tüm Enjeksiyonlara Dön
                </a>
                <a asp-controller="Codes" asp-action="Details" asp-route-id="@ViewBag.CodeId" class="btn btn-info btn-sm">
                    <i class="fas fa-info-circle"></i> Kod Detayları
                </a>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Yeni Enjeksiyon
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="alert alert-info mb-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-filter fa-2x mr-3"></i>
                    <div>
                        <strong>Filtreleme:</strong> Kod ID'si @ViewBag.CodeId olan enjeksiyon ürünleri listeleniyor.
                        <p class="mb-0 mt-1">
                            <a asp-action="Index" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-times"></i> Filtreyi Kaldır
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                    <p>Bu kod ile ilişkilendirilmiş enjeksiyon ürünü bulunamadı.</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="fas fa-plus"></i> Yeni Enjeksiyon Oluştur
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="injectionsByCodeTable" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Boyut</th>
                                <th>Kod</th>
                                <th>Günlük Kayıtlar</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.InjectionId</td>
                                    <td>
                                        <a asp-action="BySize" asp-route-sizeId="@item.SizeId" class="badge badge-info">
                                            Boyut ID: @item.SizeId
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge badge-primary">Kod ID: @item.CodeId</span>
                                    </td>
                                    <td>
                                        @if (item.InjectionDailyEntries != null && item.InjectionDailyEntries.Any())
                                        {
                                            <span class="badge badge-success">@item.InjectionDailyEntries.Count() Kayıt</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Kayıt Yok</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.InjectionId" class="btn btn-info btn-sm" data-toggle="tooltip" title="Detaylar">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.InjectionId" class="btn btn-primary btn-sm" data-toggle="tooltip" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.InjectionId" class="btn btn-danger btn-sm" data-toggle="tooltip" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#injectionsByCodeTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                "order": [[0, "asc"]],
                "pageLength": 25
            });

            $('[data-toggle="tooltip"]').tooltip();

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
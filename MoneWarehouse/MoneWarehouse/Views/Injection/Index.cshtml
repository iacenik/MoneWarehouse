@model IEnumerable<EntityLayer.Entities.Injection>

@{
    ViewData["Title"] = "Enjeksiyon Ürünleri";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Enjeksiyon Ürünleri Listesi</h6>
            <div>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Yeni Enjeksiyon
                </a>
                <div class="btn-group">
                    <button type="button" class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-filter"></i> Filtrele
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <button type="button" class="dropdown-item" data-toggle="modal" data-target="#sizeFilterModal">
                            <i class="fas fa-ruler-combined"></i> Boyuta Göre
                        </button>
                        <button type="button" class="dropdown-item" data-toggle="modal" data-target="#codeFilterModal">
                            <i class="fas fa-barcode"></i> Koda Göre
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="injectionsDataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Boyut</th>
                            <th>Kod</th>
                            <th>Günlük Kayıtlar</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                    <td>@item.InjectionId</td>
                                    <td>
                                        <a asp-action="BySize" asp-route-sizeId="@item.SizeId" class="badge badge-info">
                                            Boyut ID: @item.SizeId
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="ByCode" asp-route-codeId="@item.CodeId" class="badge badge-primary">
                                            Kod ID: @item.CodeId
                                        </a>
                                    </td>
                                    <td>
                                    @if (item.InjectionDailyEntries != null && item.InjectionDailyEntries.Any())
                                    {
                                                <span class="badge badge-success">@item.InjectionDailyEntries.Count() Kayıt</span>
                                    }
                                    else
                                    {
                                                <span class="badge badge-secondary">Kayıt Yok</span>
                                    }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.InjectionId" class="btn btn-info btn-sm" data-toggle="tooltip" title="Detaylar">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.InjectionId" class="btn btn-primary btn-sm" data-toggle="tooltip" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.InjectionId" class="btn btn-danger btn-sm" data-toggle="tooltip" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Size Filter Modal -->
<div class="modal fade" id="sizeFilterModal" tabindex="-1" role="dialog" aria-labelledby="sizeFilterModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="BySize" method="get">
                <div class="modal-header">
                    <h5 class="modal-title" id="sizeFilterModalLabel">Boyuta Göre Filtrele</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="sizeId">Boyut ID</label>
                        <input type="number" class="form-control" id="sizeId" name="sizeId" placeholder="Boyut ID'sini giriniz" min="1" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Code Filter Modal -->
<div class="modal fade" id="codeFilterModal" tabindex="-1" role="dialog" aria-labelledby="codeFilterModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="ByCode" method="get">
                <div class="modal-header">
                    <h5 class="modal-title" id="codeFilterModalLabel">Koda Göre Filtrele</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="codeId">Kod ID</label>
                        <input type="number" class="form-control" id="codeId" name="codeId" placeholder="Kod ID'sini giriniz" min="1" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            $(document).ready(function () {
                $('#injectionsDataTable').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                    },
                    "order": [[0, "asc"]],
                    "pageLength": 25
                });

                $('[data-toggle="tooltip"]').tooltip();

                // Auto-hide alerts after 5 seconds
                setTimeout(function () {
                    $(".alert").alert('close');
                }, 5000);
            });
        </script>
}
@model EntityLayer.Entities.Plıntus

@{
    ViewData["Title"] = "Plıntus Stok Bilgileri";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Plıntus Stok Bilgileri</h4>
            <div>
                <a asp-action="Details" asp-route-id="@Model.PlıntusId" class="btn btn-info btn-sm rounded-pill px-3">
                    <i class="fas fa-info-circle me-1"></i> Detaylara Dön
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm rounded-pill px-3">
                    <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6 mx-auto">
                    <div class="card border-left-primary">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-md-4 text-muted">Plıntus ID:</div>
                                <div class="col-md-8 font-weight-bold">@Model.PlıntusId</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 text-muted">Kod:</div>
                                <div class="col-md-8 font-weight-bold">@Model.Code</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 text-muted">İsim:</div>
                                <div class="col-md-8 font-weight-bold">@Model.Name</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 text-muted">Boyut:</div>
                                <div class="col-md-8 font-weight-bold">@(Model.Size != null ? Model.Size.SizeName : $"Boyut {Model.SizeId}")</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 text-muted">Durum:</div>
                                <div class="col-md-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Deaktif</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.PlıntusStocks != null && Model.PlıntusStocks.Any())
            {
                <div class="table-responsive">
                    <table id="stocksDataTable" class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Kod</th>
                                <th>İsim</th>
                                <th>Miktar</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stock in Model.PlıntusStocks)
                            {
                                <tr>
                                    <td>@stock.Id</td>
                                    <td>@stock.Code</td>
                                    <td>@stock.Name</td>
                                    <td class="text-end">@stock.Quantity</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="PlıntusStock" asp-action="Details" asp-route-id="@stock.Id" class="btn btn-sm btn-outline-info" data-toggle="tooltip" title="Detaylar">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-controller="PlıntusStock" asp-action="Edit" asp-route-id="@stock.Id" class="btn btn-sm btn-outline-primary" data-toggle="tooltip" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card mt-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="m-0"><i class="fas fa-chart-pie me-1"></i> Stok Özeti</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center mb-3">
                                <div class="display-4 font-weight-bold">@Model.PlıntusStocks.Count()</div>
                                <p>Toplam Stok Sayısı</p>
                            </div>
                            <div class="col-md-4 text-center mb-3">
                                <div class="display-4 font-weight-bold">@Model.PlıntusStocks.Sum(x => x.Quantity)</div>
                                <p>Toplam Stok Miktarı</p>
                            </div>
                            <div class="col-md-4 text-center mb-3">
                                <div class="display-4 font-weight-bold">@Model.PlıntusStocks.OrderByDescending(x => x.Quantity).FirstOrDefault()?.Name</div>
                                <p>En Yüksek Stoklu Ürün</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center" role="alert">
                    <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                    <h5>Stok kaydı bulunamadı!</h5>
                    <p>Bu plıntus için henüz stok kaydı bulunmamaktadır.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#stocksDataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                "order": [[0, "asc"]],
                "pageLength": 25
            });
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
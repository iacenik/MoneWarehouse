@model IEnumerable<EntityLayer.Entities.Plıntus>

@{
    ViewData["Title"] = "Kod Tipine Göre Plıntuslar";
    int codeId = ViewBag.CodeId;
    string codeName = Model.FirstOrDefault()?.Codes?.CodeName ?? $"Kod {codeId}";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Kod Tipine Göre Plıntuslar</h4>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-3">
                <i class="fas fa-arrow-left me-1"></i> Listeye Dön
            </a>
        </div>
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle me-1"></i> <strong>@codeName</strong> kod tipindeki plıntuslar listeleniyor.
            </div>

            <div class="table-responsive">
                <table id="byCodeDataTable" class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Kod</th>
                            <th>İsim</th>
                            <th>Boyut</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PlıntusId</td>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@(item.Size != null ? item.Size.SizeName : $"Boyut {item.SizeId}")</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success" data-toggle="tooltip" title="Bu plıntus aktif durumda">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger" data-toggle="tooltip" title="Bu plıntus deaktif durumda">Deaktif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.PlıntusId" class="btn btn-sm btn-outline-primary" data-toggle="tooltip" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.PlıntusId" class="btn btn-sm btn-outline-info" data-toggle="tooltip" title="Detaylar">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="WithDailyEntries" asp-route-id="@item.PlıntusId" class="btn btn-sm btn-outline-secondary" data-toggle="tooltip" title="Günlük Kayıtlar">
                                            <i class="fas fa-calendar-alt"></i>
                                        </a>
                                        <a asp-action="WithStocks" asp-route-id="@item.PlıntusId" class="btn btn-sm btn-outline-success" data-toggle="tooltip" title="Stok Bilgisi">
                                            <i class="fas fa-boxes"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <span>Toplam <strong>@Model.Count()</strong> plıntus bulunmaktadır.</span>
            <span>Aktif Plıntus: <strong>@Model.Count(x => x.IsActive)</strong></span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#byCodeDataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                "order": [[0, "asc"]],
                "pageLength": 25
            });
            $('[data-toggle="tooltip"]').tooltip();
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
@model EntityLayer.Entities.Plıntus

@{
    ViewData["Title"] = "Yeni Plıntus Ekle";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Yeni Plıntus Ekle</h4>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-3">
                <i class="fas fa-arrow-left me-1"></i> Listeye Dön
            </a>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Code" class="form-control" placeholder="Kod" required />
                                    <label asp-for="Code">Kod</label>
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="İsim" required />
                                    <label asp-for="Name">İsim</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="SizeId" class="form-select" required>
                                        <option value="">Boyut Seçiniz</option>
                                        @if (ViewBag.Sizes != null)
                                        {
                                            @foreach (var size in ViewBag.Sizes)
                                            {
                                                <option value="@size.SizeId">@size.Name</option>
                                            }
                                        }
                                    </select>
                                    <label asp-for="SizeId">Boyut</label>
                                    <span asp-validation-for="SizeId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="CodeId" class="form-select" required>
                                        <option value="">Kod Tipi Seçiniz</option>
                                        @if (ViewBag.Codes != null)
                                        {
                                            @foreach (var code in ViewBag.Codes)
                                            {
                                                <option value="@code.CodeId">@code.Name</option>
                                            }
                                        }
                                    </select>
                                    <label asp-for="CodeId">Kod Tipi</label>
                                    <span asp-validation-for="CodeId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">Aktif</label>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-save me-1"></i> Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 ms-2">
                                <i class="fas fa-times-circle me-1"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Form validation için Bootstrap validation kullanımı
            $('form').submit(function (event) {
                if (this.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                $(this).addClass('was-validated');
            });

            // Auto-focus ilk input alanına
            $('input:first').focus();
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
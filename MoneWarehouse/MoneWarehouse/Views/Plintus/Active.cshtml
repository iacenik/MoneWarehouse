@model IEnumerable<EntityLayer.Entities.Plıntus>

@{
    ViewData["Title"] = "Aktif Plıntus Listesi";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Aktif Plıntus Listesi</h4>
            <div>
                <a asp-action="Create" class="btn btn-success btn-sm rounded-pill px-3">
                    <i class="fas fa-plus-circle me-1"></i> Yeni Plıntus Ekle
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm rounded-pill px-3">
                    <i class="fas fa-list me-1"></i> Tüm Plıntuslar
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle me-1"></i> Bu görünümde sadece <strong>aktif durumdaki</strong> plıntuslar listelenmektedir.
            </div>

            <div class="table-responsive">
                <table id="activePlintusDataTable" class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Kod</th>
                            <th>İsim</th>
                            <th>Boyut</th>
                            <th>Oluşturma Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PlıntusId</td>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@(item.Size != null ? item.Size.SizeName : $"Boyut {item.SizeId}")</td>
                                <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.PlıntusId" class="btn btn-sm btn-outline-primary" data-toggle="tooltip" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.PlıntusId" class="btn btn-sm btn-outline-info" data-toggle="tooltip" title="Detaylar">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <form asp-action="Deactivate" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.PlıntusId" />
                                            <button type="submit" class="btn btn-sm btn-outline-warning" data-toggle="tooltip" title="Deaktif Et">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        </form>
                                        <a asp-action="WithDailyEntries" asp-route-id="@item.PlıntusId" class="btn btn-sm btn-outline-secondary" data-toggle="tooltip" title="Günlük Kayıtlar">
                                            <i class="fas fa-calendar-alt"></i>
                                        </a>
                                        <a asp-action="WithStocks" asp-route-id="@item.PlıntusId" class="btn btn-sm btn-outline-success" data-toggle="tooltip" title="Stok Bilgisi">
                                            <i class="fas fa-boxes"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <span>Toplam <strong>@Model.Count()</strong> aktif plıntus bulunmaktadır.</span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#activePlintusDataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                "order": [[0, "asc"]],
                "pageLength": 25
            });
            $('[data-toggle="tooltip"]').tooltip();
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}
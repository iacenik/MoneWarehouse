@model IEnumerable<EntityLayer.Entities.Request>

@{
    ViewData["Title"] = "Tarih Aralığı Talepleri";
}

<div class="container-fluid">
    <h2>@ViewBag.StartDate.ToString("dd/MM/yyyy") - @ViewBag.EndDate.ToString("dd/MM/yyyy") Arası Talepler</h2>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Talep Listesine Dön</a>
        <a asp-action="ByDateRange" class="btn btn-primary">Yeni Arama</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Talep Listesi</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Talep No</th>
                                <th>Çalışan</th>
                                <th>Tür</th>
                                <th>Durum</th>
                                <th>Öncelik</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Son Tarih</th>
                                <th>Atanan Kişi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.RequestNumber</td>
                                    <td>@item.Employee.EmployeeName</td>
                                    <td>@item.RequestType</td>
                                    <td>
                                        <span class="badge bg-@(item.Status == "Completed" ? "success" :
                                             item.Status == "In Progress" ? "info" :
                                             item.Status == "Cancelled" ? "danger" : "warning")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(item.Priority == "Urgent" ? "danger" :
                                             item.Priority == "High" ? "warning" :
                                             item.Priority == "Low" ? "info" : "secondary")">
                                            @item.Priority
                                        </span>
                                    </td>
                                    <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                    <td>@(item.DueDate.HasValue ? item.DueDate.Value.ToString("dd/MM/yyyy") : "-")</td>
                                    <td>@(string.IsNullOrEmpty(item.AssignedTo) ? "-" : item.AssignedTo)</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Bu tarih aralığında talep bulunamadı.
                </div>
            }
        </div>
    </div>
</div>
@model EntityLayer.Entities.Request

<div class="card mb-3">
    <div class="card-header">
        <h5>Talep Durumunu Güncelle</h5>
    </div>
    <div class="card-body">
        <form asp-action="UpdateStatus" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="form-group mb-3">
                <label for="status" class="form-label">Durum:</label>
                <select name="status" id="status" class="form-select">
                    <option value="Pending" selected="@(Model.Status == "Pending")">Beklemede</option>
                    <option value="In Progress" selected="@(Model.Status == "In Progress")">İşlemde</option>
                    <option value="Completed" selected="@(Model.Status == "Completed")">Tamamlandı</option>
                    <option value="Cancelled" selected="@(Model.Status == "Cancelled")">İptal Edildi</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Durumu Güncelle</button>
        </form>
    </div>
</div>
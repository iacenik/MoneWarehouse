@{
    ViewData["Title"] = "Departmana Göre Çalışanlar";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Departmana Göre Çalışan Filtrele</h6>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="p-4">
                        <form asp-action="ByDepartment" method="get" class="user">
                            <div class="form-group">
                                <label for="department">Departman Adı</label>
                                <input type="text" class="form-control form-control-user" id="department" name="department" placeholder="Departman adını giriniz..." required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    <i class="fas fa-search"></i> Filtrele
                                </button>
                            </div>
                        </form>
                        <hr>
                        <div class="text-center">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> Bu sayfada departmana göre çalışan filtrelemesi yapabilirsiniz.
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <a asp-action="Index" class="btn btn-secondary btn-user btn-block">
                                        <i class="fas fa-list"></i> Tüm Çalışanlar
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a asp-action="Active" class="btn btn-success btn-user btn-block">
                                        <i class="fas fa-check-circle"></i> Aktif Çalışanlar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Popüler Departmanlar</h6>
        </div>
        <div class="card-body">
            <div class="row text-center">
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("ByDepartment", new { department = "Üretim" })" class="btn btn-light btn-icon-split btn-block">
                        <span class="icon text-gray-600">
                            <i class="fas fa-industry"></i>
                        </span>
                        <span class="text">Üretim</span>
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("ByDepartment", new { department = "Satış" })" class="btn btn-light btn-icon-split btn-block">
                        <span class="icon text-gray-600">
                            <i class="fas fa-shopping-cart"></i>
                        </span>
                        <span class="text">Satış</span>
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("ByDepartment", new { department = "Muhasebe" })" class="btn btn-light btn-icon-split btn-block">
                        <span class="icon text-gray-600">
                            <i class="fas fa-calculator"></i>
                        </span>
                        <span class="text">Muhasebe</span>
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("ByDepartment", new { department = "İnsan Kaynakları" })" class="btn btn-light btn-icon-split btn-block">
                        <span class="icon text-gray-600">
                            <i class="fas fa-users"></i>
                        </span>
                        <span class="text">İnsan Kaynakları</span>
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("ByDepartment", new { department = "Pazarlama" })" class="btn btn-light btn-icon-split btn-block">
                        <span class="icon text-gray-600">
                            <i class="fas fa-bullhorn"></i>
                        </span>
                        <span class="text">Pazarlama</span>
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("ByDepartment", new { department = "Bilgi İşlem" })" class="btn btn-light btn-icon-split btn-block">
                        <span class="icon text-gray-600">
                            <i class="fas fa-laptop"></i>
                        </span>
                        <span class="text">Bilgi İşlem</span>
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("ByDepartment", new { department = "Lojistik" })" class="btn btn-light btn-icon-split btn-block">
                        <span class="icon text-gray-600">
                            <i class="fas fa-truck"></i>
                        </span>
                        <span class="text">Lojistik</span>
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("ByDepartment", new { department = "Ar-Ge" })" class="btn btn-light btn-icon-split btn-block">
                        <span class="icon text-gray-600">
                            <i class="fas fa-flask"></i>
                        </span>
                        <span class="text">Ar-Ge</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@model EntityLayer.Entities.Employee

@{
    ViewData["Title"] = "Yeni Çalışan";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Yeni Çalışan Oluştur</h6>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
        <form asp-action="Create" method="post">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-primary">Kişisel Bilgiler</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="control-label">Ad</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Adı giriniz" required />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName" class="control-label">Soyad</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Soyadı giriniz" required />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Department" class="control-label">Departman</label>
                                    <input asp-for="Department" class="form-control" placeholder="Departmanı giriniz" required />
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-primary">İletişim Bilgileri</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label">E-posta</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresini giriniz" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label">Telefon</label>
                                    <input asp-for="Phone" class="form-control" placeholder="Telefon numarasını giriniz" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-primary">İş Bilgileri</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="HireDate" class="control-label">İşe Başlama Tarihi</label>
                                    <input asp-for="HireDate" type="date" class="form-control" required />
                                    <span asp-validation-for="HireDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Set default hire date to today
            if (!$("#HireDate").val()) {
                $("#HireDate").val(new Date().toISOString().split('T')[0]);
            }
        });
    </script>
}
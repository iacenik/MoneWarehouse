@model EntityLayer.Entities.Employee

@{
    ViewData["Title"] = "Çalışan Sil";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Çalışan Silme Onayı</h6>
            <div>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
                <a asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-info btn-sm">
                    <i class="fas fa-info-circle"></i> Detaylar
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-triangle"></i> Uyarı!</h5>
                <p><strong>@Model.FirstName @Model.LastName</strong> isimli çalışanı silmek üzeresiniz. Bu işlem geri alınamaz!</p>
                <p>Eğer bu çalışan ile ilişkili üretim kayıtları varsa, silme işlemi başarısız olabilir. Bu durumda önce kaydı deaktif etmeniz önerilir.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4 border-left-danger">
                        <div class="card-body">
                            <div class="text-center mb-4">
                                <div class="rounded-circle bg-danger text-white d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 40px;">
                                    @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                                </div>
                                <h4 class="mt-3 font-weight-bold">@Model.FirstName @Model.LastName</h4>
                                <p class="text-muted">@Model.Department</p>
                                <p>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Pasif</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">Çalışan Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <th>E-posta</th>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <th>Telefon</th>
                                    <td>@Model.Phone</td>
                                </tr>
                                <tr>
                                    <th>İşe Başlama Tarihi</th>
                                    <td>@Model.HireDate.ToString("dd.MM.yyyy")</td>
                                </tr>
                                <tr>
                                    <th>İşten Ayrılma Tarihi</th>
                                    <td>
                                        @if (Model.TerminationDate.HasValue)
                                        {
                                            @Model.TerminationDate.Value.ToString("dd.MM.yyyy")
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="EmployeeId" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                    <div>
                        @if (Model.IsActive)
                        {
                            <a asp-action="Deactivate" asp-route-id="@Model.EmployeeId" class="btn btn-warning">
                                <i class="fas fa-user-slash"></i> Deaktif Et
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-secondary ml-2">
                            <i class="fas fa-times"></i> İptal
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
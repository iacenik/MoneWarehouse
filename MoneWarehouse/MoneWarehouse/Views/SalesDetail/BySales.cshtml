@model IEnumerable<EntityLayer.Entities.SalesDetail>

@{
    ViewData["Title"] = "Satışa Göre Detaylar";
}

<div class="container-fluid">
    <h2>Satış #@ViewBag.SalesId Detayları</h2>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Tüm Detaylara Dön</a>
        <a asp-action="Details" asp-controller="Sales" asp-route-id="@ViewBag.SalesId" class="btn btn-info">Satış Bilgilerine Dön</a>
        <a asp-action="AddDetail" asp-controller="Sales" asp-route-id="@ViewBag.SalesId" class="btn btn-success">Yeni Ürün Ekle</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Satış Detayları</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Detay No</th>
                                <th>Ürün Tipi</th>
                                <th>Ürün</th>
                                <th>Miktar</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                decimal totalAmount = 0;
                            }
                            @foreach (var item in Model)
                            {
                                totalAmount += item.TotalPrice;

                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.ProductType</td>
                                    <td>
                                        @if (item.ProductType == "Plıntus" && item.PlıntusStock != null)
                                        {
                                            @item.PlıntusStock.Name
                                        }
                                        else if (item.ProductType == "Injection" && item.InjectionStock != null)
                                        {
                                            @item.InjectionStock.Name
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("N2") ₺</td>
                                    <td>@item.TotalPrice.ToString("N2") ₺</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-primary">
                                <th colspan="5" class="text-end">Toplam:</th>
                                <th>@totalAmount.ToString("N2") ₺</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Bu satışa ait detay bulunamadı.
                </div>
            }
        </div>
    </div>
</div>
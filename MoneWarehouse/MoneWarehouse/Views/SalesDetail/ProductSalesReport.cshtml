@{
    ViewData["Title"] = "Ürün Satış Raporu";
}

<div class="container-fluid">
    <h2>Ürün Satış Raporu</h2>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Tüm Detaylara Dön</a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger">
            @TempData["ErrorMessage"]
            </div>
    }

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5>Ürün Satış Adet Raporu</h5>
                </div>
                <div class="card-body">
                    <p>Belirli bir tarih aralığında satılan ürünlerin adetlerini görüntüler.</p>

                    <form asp-action="ProductSalesCount" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group mb-3">
                                    <label for="startDate" class="form-label">Başlangıç Tarihi:</label>
                                    <input type="date" id="startDate" name="startDate" class="form-control" value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" required />
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group mb-3">
                                    <label for="endDate" class="form-label">Bitiş Tarihi:</label>
                                    <input type="date" id="endDate" name="endDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary mt-4">Göster</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5>Ürün Satış Tutar Raporu</h5>
                </div>
                <div class="card-body">
                    <p>Belirli bir tarih aralığında satılan ürünlerin tutarlarını görüntüler.</p>

                    <form asp-action="ProductSalesAmount" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group mb-3">
                                    <label for="startDate2" class="form-label">Başlangıç Tarihi:</label>
                                    <input type="date" id="startDate2" name="startDate" class="form-control" value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" required />
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group mb-3">
                                    <label for="endDate2" class="form-label">Bitiş Tarihi:</label>
                                    <input type="date" id="endDate2" name="endDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary mt-4">Göster</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
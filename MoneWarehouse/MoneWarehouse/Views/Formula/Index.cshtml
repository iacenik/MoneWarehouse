@model IEnumerable<EntityLayer.Entities.Formula>

@{
    ViewData["Title"] = "Formüller";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Formül Listesi</h6>
            <div>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Yeni Formül
                </a>
                <a asp-action="FindByName" class="btn btn-info btn-sm">
                    <i class="fas fa-search"></i> İsme Göre Ara
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="formulasDataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FormulaId)</th>
                            <th>@Html.DisplayNameFor(model => model.FormulaName)</th>
                            <th>İçerik Uzunluğu</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FormulaId)</td>
                                <td>@Html.DisplayFor(modelItem => item.FormulaName)</td>
                                <td>
                                    @if (item.FormulaContent != null)
                                    {
                                        <span class="badge badge-info">@item.FormulaContent.Length karakterlik içerik</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">İçerik yok</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.FormulaId" class="btn btn-info btn-sm" data-toggle="tooltip" title="Detaylar">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.FormulaId" class="btn btn-primary btn-sm" data-toggle="tooltip" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.FormulaId" class="btn btn-danger btn-sm" data-toggle="tooltip" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#formulasDataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                "order": [[0, "asc"]],
                "pageLength": 25
            });

            $('[data-toggle="tooltip"]').tooltip();

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}